@model Book_Store_Database_Design.Models.Author

<h2>Create Author</h2>

<form asp-action="Create" method="post">

    <div class="form-group">
        <label asp-for="AuthorName"></label>
        <input asp-for="AuthorName" class="form-control" />
        <span asp-validation-for="AuthorName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AuthorBio"></label>
        <input asp-for="AuthorBio" class="form-control" />
        <span asp-validation-for="AuthorBio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BirthDate"></label>
        <input asp-for="BirthDate" class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index">Cancel</a>
    </div>
</form>
