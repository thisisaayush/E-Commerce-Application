@model Book_Store_Database_Design.Models.Author

<h2>Delete Author</h2>

<div>
    <h4>Are you sure you want to delete this author?</h4>
    <h4>Author ID: @Model.AuthorID</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Author Name</dt>
        <dd class="col-sm-10">@Model.AuthorName</dd>

        <dt class="col-sm-2">Author Bio</dt>
        <dd class="col-sm-10">@Model.AuthorBio</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="AuthorID" />

        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Index">Cancel</a>
    </form>
</div>
