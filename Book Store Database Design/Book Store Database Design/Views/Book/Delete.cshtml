@model Book_Store_Database_Design.Models.Book

<h2>Delete Book</h2>

<div>
    <h4>Are you sure you want to delete this book?</h4>
    <h4>Book ID: @Model.BookID</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ISBN:</dt>
        <dd class="col-sm-10">@Model.ISBN</dd>

        <dt class="col-sm-2">Title:</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <!-- Include other properties as needed -->

        <dt class="col-sm-2">Quantity In Stock:</dt>
        <dd class="col-sm-10">@Model.QuantityInStock</dd>

        <dt class="col-sm-2">Publication Year:</dt>
        <dd class="col-sm-10">@Model.PublicationYear</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="BookID" />

        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Index">Cancel</a>
    </form>
</div>
